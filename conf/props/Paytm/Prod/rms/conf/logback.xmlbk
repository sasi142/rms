
<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>logs/rms.log</file>
    <encoder>
       <pattern>%date | %thread | %-5p | %class{50}.%method:%L | %m%n</pattern>
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date | %thread | %-5p | %class{50}.%method:%L | %m%n</pattern>
    </encoder>
  </appender>

  <logger name="play" level="OFF"/>
  <logger name="akka" level="OFF"/>
  <logger name="org" level="OFF"/>
  <logger name="com" level="OFF"/>
  <logger name="controllers" level="INFO"/>
  <logger name="core" level="INFO"/>
  <logger name="utils" level="INFO"/>
  <logger name="messages" level="INFO"/>

 <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
