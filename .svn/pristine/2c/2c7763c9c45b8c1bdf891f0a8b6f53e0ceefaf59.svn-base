@(connected: String)(content: Html)

<!DOCTYPE html>

<html>
    <head>
        <title>WorkApps Chat</title>
        <link rel="stylesheet" media="screen" href="@routes.Assets.at("stylesheets/bootstrap.css")">
        <link rel="stylesheet" media="screen" href="@routes.Assets.at("stylesheets/main.css")">
        <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">
        <script src="@routes.Assets.at("javascripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    </head>
    <body>
        
        <div class="topbar">
            <div class="fill">
                <div class="container">
                    <a class="brand" href="@routes.MainController.index()">WorkApps Chat</a>
                    
                    @if(connected != null) {
                        <p class="pull-right">
                            Logged in as @connected -
                            <a href="@routes.MainController.index()">Disconnect</a>
                        </p>
                    } else {
                        <form action="@routes.MainController.chatRoom()" class="pull-right">
                            <input id="username" name="username" class="input-small" type="text" placeholder="Username">
                            <button class="btn" type="submit">Sign in</button>
                        </form>
                    }
                    
                </div>
            </div>
        </div>            
        
        

        <div class="container">
            <div id="chat-content" class="content">
                @content
            </div> <br><br>
           
            <footer>
                <p>
                    <a href="http://www.playframework.com">www.playframework.com</a>
                </p>
            </footer>

        </div>
<script type="text/javascript">
   
</script>
        
    </body>
</html>